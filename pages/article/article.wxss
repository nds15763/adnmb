.list_content view.open text {
	color: #b63b4d;
}
.accordion li.open .link {
	color: #b63b4d;
}
 .submenu {
 	background: #F2F5FB;
 	font-size: 14px;
 }
 .subli {
 	border-bottom: 1px solid #B7C8E3;
 	text-decoration: none;
 	color: #000;
 	padding: 12px;
 	padding-left: 42px;
 	-webkit-transition: all 0.25s ease;
 	-o-transition: all 0.25s ease;
 	transition: all 0.25s ease;
 }
.subli:hover {
 	background: #b63b4d;
 	color: #FFF;
 }
 .page_item{
  overflow: hidden;
  width: 95vw;
  margin-top:2vh;
  margin-left: auto;
  margin-right: auto;
  border-radius:6px;
  box-shadow: darkgrey 0px 0px 5px 1px;
 }
 .page_title{
   width: 100%;
   height: 15px;
   font-size: 12px;
   line-height: 15px;
   color: #aaa;
   padding: 1vh 0;
   margin:0 2vh;
   border-bottom: 1px #aaa dashed;
 }
.p_title_left{
  float: left;
}
.p_title_left p{
  margin: 0 5px;
}
.p_title_right{
  float: right;
}
.page_content{
  width: auto;
  height: auto;
  word-break: break-all;
  font-size: 14px;
  margin: 0 10px 10px 10px;
}
.page_content text{ margin: 5px;}