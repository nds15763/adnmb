.slide_list{
  min-height: 1000px;
  width:100%;
}
.right_bar{
  float: right;
  background-color: #FD4C5B;
  color: white;
  border: none;
}
.top_bar button::after{
border: none;
}
.scroll-view_H{
  width: 100% ;
  padding-bottom:45px;
}
.page_item{
  width: 100%;
  min-height: 100px;
  /* border:1px outset #B7C8E3; */
  background-color:#fff;
  margin:5px 0;
}
.reTitle{
  border-radius:3px;
  color: white;
  background-color: red;
}
.inner_bar{
  height: 40px;
}
.top_bar view{
  display: inline;
}
.firstli{
  cursor: pointer;
	display: block;
	padding: 15px 15px 15px 42px;
	color: #4D4D4D;
	font-size: 14px;
	font-weight: 700;
	border-bottom: 1px solid #CCC;
	position: relative;
	-webkit-transition: all 0.4s ease;
	-o-transition: all 0.4s ease;
	transition: all 0.4s ease;
}
.show{
  display: block;
}
.hide{
  display: none
}
.top_bar icon{
  font-size:3.5vh;
}
.right_bar{
  line-height:8vh;
}
